<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewClinicServicesActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Hold a service to delete it"
            android:textAlignment="center"
            android:textSize="18sp" />

        <ListView
            android:id="@+id/listViewServices"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/tv_subtitle2"
            android:layout_weight="1">

        </ListView>

        <Button
            android:id="@+id/btn_addService"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Add a service" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>